    #ifdef __DLL
    #  define SCIF2SHARED_EXPORT Q_DECL_EXPORT
    #else
    #  define SCIF2SHARED_EXPORT Q_DECL_IMPORT
    #endif
#endif

#endif // SCIF2_GLOBAL_H
